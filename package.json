{
  "name": "tauri-plugin-pinia",
  "version": "0.1.0",
  "description": "Persistent Pinia stores for Tauri",
  "type": "module",
  "packageManager": "pnpm@9.4.0",
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,md,json,yaml}": "prettier --write"
  },
  "homepage": "https://github.com/ferreira-tb/tauri-plugin-pinia",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ferreira-tb/tauri-plugin-pinia.git"
  },
  "bugs": {
    "url": "https://github.com/ferreira-tb/tauri-plugin-pinia/issues"
  },
  "contributors": [
    {
      "name": "Andrew Ferreira",
      "email": "andrew.shien2@gmail.com",
      "url": "https://tb.dev.br/"
    }
  ],
  "keywords": [
    "vue",
    "tauri",
    "pinia",
    "plugin"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache && cargo clippy",
    "lint-fix": "eslint . --config eslint.config.js --fix",
    "prepare": "husky",
    "release": "pnpm run build && pnpm publish && cargo publish",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.6.0",
    "@tauri-apps/plugin-store": "2.0.0-beta.6",
    "@vueuse/core": "^10.11.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.31"
  },
  "devDependencies": {
    "@tb-dev/eslint-config": "^3.8.8",
    "@types/node": "^20.14.9",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-dts": "^3.9.1",
    "vue-tsc": "^2.0.24"
  }
}
