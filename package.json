{
  "name": "monorepo",
  "version": "0.5.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.10.0",
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,md}": "prettier --write"
  },
  "scripts": {
    "build": "pnpm run -F tauri-plugin-pinia build",
    "build:docs": "pnpm run -F docs build && pnpm run -F tauri-plugin-pinia typedoc",
    "clippy": "cargo clippy",
    "dev": "cargo tauri dev",
    "dev:async": "cargo tauri dev --features async-pinia",
    "docs:cargo": "cargo doc -p tauri-plugin-pinia --open --no-deps",
    "docs:vite": "pnpm run -F docs dev",
    "format": "prettier . --write && cargo fmt --all",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache && cargo clippy",
    "lint-fix": "eslint . --config eslint.config.js --fix",
    "prepare": "husky",
    "release": "pnpm run release:crate && pnpm run release:npm",
    "release:crate": "cargo clippy && cargo publish -p tauri-plugin-pinia",
    "release:npm": "pnpm run build && pnpm publish -F tauri-plugin-pinia",
    "type-check": "pnpm run -F tauri-plugin-pinia type-check"
  },
  "devDependencies": {
    "@tb-dev/eslint-config": "^5.3.2",
    "@types/node": "^22.5.5",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.10.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.11",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.5",
    "vite-plugin-dts": "^4.2.1",
    "vue-tsc": "^2.1.6"
  }
}